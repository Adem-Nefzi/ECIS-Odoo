<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="view_ecis_equipment_tree" model="ir.ui.view">
        <field name="name">ecis.equipment.tree</field>
        <field name="model">ecis.equipment</field>
        <field name="arch" type="xml">
            <tree string="Equipment">
                <field name="name"/>
                <field name="equipment_type"/>
                <field name="client_id"/>
                <field name="serial_number"/>
                <field name="last_inspection_date"/>
                <field name="inspection_count"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_ecis_equipment_form" model="ir.ui.view">
        <field name="name">ecis.equipment.form</field>
        <field name="model">ecis.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <header>
                    <button name="action_schedule_inspection" 
                            string="Schedule Inspection" 
                            type="object" 
                            class="btn-primary"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_inspections" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-calendar-check-o">
                            <field name="inspection_count" widget="statinfo" 
                                   string="Inspections"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g., Overhead Crane - Building A"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Equipment Information">
                            <field name="equipment_type"/>
                            <field name="brand"/>
                            <field name="model"/>
                            <field name="serial_number"/>
                            <field name="manufacture_year"/>
                            <field name="capacity"/>
                        </group>
                        
                        <group string="Client and Location">
                            <field name="client_id"/>
                            <field name="location"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Inspection History">
                            <field name="last_inspection_date"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Additional notes about this equipment..."/>
                        </page>
                        
                        <page string="Inspections">
                            <field name="inspection_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="inspection_date"/>
                                    <field name="inspector_id"/>
                                    <field name="overall_result"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_ecis_equipment_search" model="ir.ui.view">
        <field name="name">ecis.equipment.search</field>
        <field name="model">ecis.equipment</field>
        <field name="arch" type="xml">
            <search string="Search Equipment">
                <field name="name"/>
                <field name="client_id"/>
                <field name="serial_number"/>
                <field name="equipment_type"/>
                
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Equipment Type" name="group_type" 
                            context="{'group_by': 'equipment_type'}"/>
                    <filter string="Client" name="group_client" 
                            context="{'group_by': 'client_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_ecis_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">ecis.equipment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first equipment
            </p>
            <p>
                Add equipment that requires periodic technical inspections.
            </p>
        </field>
    </record>

</odoo>