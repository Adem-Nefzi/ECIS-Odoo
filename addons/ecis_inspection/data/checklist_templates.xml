<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Crane Checklist Templates -->
        <record id="checklist_crane_1" model="ecis.checklist.template">
            <field name="name">Visual inspection of structural components</field>
            <field name="equipment_type">crane</field>
            <field name="requirement">ISO 9927-1</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="checklist_crane_2" model="ecis.checklist.template">
            <field name="name">Inspection of wire ropes and chains</field>
            <field name="equipment_type">crane</field>
            <field name="requirement">ISO 4309</field>
            <field name="sequence">20</field>
        </record>
        
        <record id="checklist_crane_3" model="ecis.checklist.template">
            <field name="name">Load test verification</field>
            <field name="equipment_type">crane</field>
            <field name="requirement">EN 14492-2</field>
            <field name="sequence">30</field>
        </record>
        
        <record id="checklist_crane_4" model="ecis.checklist.template">
            <field name="name">Safety devices functionality check</field>
            <field name="equipment_type">crane</field>
            <field name="requirement">ISO 9927-2</field>
            <field name="sequence">40</field>
