            <field name="sequence">20</field>
        </record>
        
        <record id="checklist_pressure_3" model="ecis.checklist.template">
            <field name="name">Thickness measurement (ultrasonic)</field>
            <field name="equipment_type">pressure_vessel</field>
            <field name="requirement">API 510</field>
            <field name="sequence">30</field>
        </record>
        
    </data>
