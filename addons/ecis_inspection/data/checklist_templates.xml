            <field name="sequence">10</field>
        </record>
        
        <record id="checklist_elevator_2" model="ecis.checklist.template">
            <field name="name">Emergency brake system test</field>
            <field name="equipment_type">elevator</field>
            <field name="requirement">EN 81-20</field>
            <field name="sequence">20</field>
        </record>
        
        <record id="checklist_elevator_3" model="ecis.checklist.template">
            <field name="name">Governor and safety gear verification</field>
            <field name="equipment_type">elevator</field>
            <field name="requirement">EN 81-20</field>
            <field name="sequence">30</field>
        </record>
        
        <!-- Pressure Vessel Checklist Templates -->
        <record id="checklist_pressure_1" model="ecis.checklist.template">
