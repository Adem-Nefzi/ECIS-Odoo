<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <record id="email_template_inspection_completed" model="mail.template">
            <field name="name">ECIS - Inspection Completed</field>
            <field name="model_id" ref="model_ecis_inspection"/>
            <field name="subject">Inspection Report - ${object.name}</field>
            <field name="email_from">${user.email or 'noreply@ecis-dz.com'}</field>
            <field name="email_to">${object.client_id.email}</field>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
    <div style="background-color: #6C4AB6; padding: 20px; text-align: center;">
        <h2 style="color: white; margin: 0;">ECIS-DZ Technical Inspection</h2>
    </div>
    <div style="padding: 30px; background-color: #f9f9f9;">
        <h3>Inspection Report Completed</h3>
        <p>Dear <strong>${object.client_id.name}</strong>,</p>
        <p>We have completed the technical inspection of your equipment.</p>
        <div style="background-color: white; padding: 20px; margin: 20px 0; border-left: 4px solid #6C4AB6;">
            <p><strong>Report Number:</strong> ${object.name}</p>
            <p><strong>Equipment:</strong> ${object.equipment_id.name}</p>
            <p><strong>Inspection Date:</strong> ${object.inspection_date}</p>
            <p><strong>Inspector:</strong> ${object.inspector_id.name}</p>
        </div>
        <p>The detailed inspection report is attached to this email.</p>
        <p>Best regards,<br/><strong>ECIS-DZ Technical Inspection Team</strong></p>
    </div>
    <div style="background-color: #333; padding: 15px; text-align: center; color: white; font-size: 12px;">
        <p>ECIS-DZ - Professional Technical Inspection Services</p>
    </div>
</div>
            ]]></field>
            <field name="report_template_ids" eval="[(4, ref('ecis_inspection.action_report_inspection'))]"/>
        </record>
        
    </data>
</odoo>