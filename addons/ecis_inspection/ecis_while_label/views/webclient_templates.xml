<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Remove "Powered by Odoo" footer -->
    <template id="login_layout_footer" inherit_id="web.login_layout" name="ECIS Login Footer">
        <xpath expr="//div[hasclass('oe_single_form_footer')]" position="replace">
            <div class="oe_single_form_footer text-center mt-3">
                <p class="text-muted">
                    Â© <t t-esc="datetime.datetime.now().year"/> ECIS-DZ - Technical Inspection Services
                </p>
            </div>
        </xpath>
    </template>
    
    <!-- Customize login page title -->
    <template id="login_page_title" inherit_id="web.login" name="ECIS Login Title">
        <xpath expr="//title" position="replace">
            <title>ECIS-DZ - Inspection Management System</title>
        </xpath>
    </template>
    
    <!-- Remove documentation links -->
    <template id="remove_documentation" inherit_id="web.webclient_bootstrap" name="Remove Odoo Documentation">
        <xpath expr="//a[@data-menu='documentation']" position="replace"/>
        <xpath expr="//a[@data-menu='support']" position="replace"/>
        <xpath expr="//a[@href='https://www.odoo.com/page/about-us']" position="replace"/>
    </template>

</odoo>